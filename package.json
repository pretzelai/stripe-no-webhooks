{
  "name": "stripe-no-webhooks",
  "version": "0.0.12",
  "author": "Ramon Garate",
  "description": "Stripe integration without dealing with webhooks",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    }
  },
  "bin": {
    "stripe-no-webhooks": "./bin/cli.js"
  },
  "files": [
    "dist",
    "bin",
    "src/templates"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/client.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/client.ts --format cjs,esm --dts --watch",
    "test": "bun test",
    "test:db:up": "docker compose -f tests/docker-compose.yml up -d && sleep 2",
    "test:db:down": "docker compose -f tests/docker-compose.yml down",
    "test:credits": "bun test tests/credits.test.ts",
    "prepublishOnly": "npm run build",
    "release": "npm version patch && npm publish"
  },
  "dependencies": {
    "@pretzelai/stripe-sync-engine": "^0.48.3",
    "dotenv": "^17.2.3",
    "pg": "^8.13.1"
  },
  "peerDependencies": {
    "stripe": ">=14.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/pg": "^8.16.0",
    "stripe": "^17.4.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "stripe",
    "webhooks",
    "nextjs",
    "supabase",
    "sync"
  ],
  "license": "MIT"
}